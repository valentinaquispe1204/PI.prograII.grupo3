<%- include('./partials/head.ejs') %>
    <%- include('./partials/header.ejs') %>

       
        <main>

            <div class="user-detail container">
                <section class="top main-content">
                     <a href="">
                    <img class="profile" src="/images/fotosPerfil/<%=grama.fotoDePerfil %>" alt=""> 
                </a>
                    <div class="info-usuario">
                        <p> <%= grama.arroba %></p>

                        <a class="follow" href="">seguir</a>
                        <ul class="meta">
                            <li><%= grama.posteosU.length %> posteos</li>
                            <li>200 seguidores</li>
                            <li>300 seguidos</li>
                        </ul>
                    </div>
                </section>

                <% for( let i=0; i < grama.posteosU.length; i++ ) { %>
                    <section class="bottom">
                        <article class="post">
                            <a href="/products/detallePost/<%= grama.posteosU[i].idPosteo %>">
                                <img src="/images/<%=grama.posteosU[i].nombreImagen %>" alt="">
                                <p> <%= grama.posteosU[i].piePost  %></p>
                            </a>
                        </article>
                    </section>
                    <% } %>
            </div>
            </section>

           
        </main>

        <%- include('./partials/footer.ejs') %>