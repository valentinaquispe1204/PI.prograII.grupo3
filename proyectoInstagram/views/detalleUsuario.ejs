<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>

<!-- Aca va el codigo -->
<main>
    <% for( let i = 0; i < 1; i++ ) { %> <!-- para que muestre solo un usuario -->
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= grama.posteos[i].fotoPerfil %>" alt="">
                <div class="info-usuario">
                    <p><%= grama.posteos[i].arroba %></p> 
                    <a class="follow" href="">seguir</a>
                    <ul class="meta">
                        <li>100 post</li>
                        <li>200 seguidores</li>
                        <li>300 seguidos</li>
                    </ul>
                </div>
            </section>
    <% } %>
    <% for( let i = 0; i < grama.posteos.length; i++ ) { %>
            <section class="bottom">
                        <article class="post">
                            <a href="/products/detallePost">
                                <img src="https://via.placeholder.com/200x250" alt="">
                            </a>
                        </article>
                        
                    </section>
                </div>
    <% } %>
            
</main>

